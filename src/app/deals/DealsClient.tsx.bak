        } else if (searchField === 'notes') {
          matchesSearch = checkMatch(deal.notes)
        }
      }
      
      const matchesAssignee = filterAssignee === 'all' || deal.assignedTo === filterAssignee
      return matchesStage && matchesSearch && matchesAssignee
    })
